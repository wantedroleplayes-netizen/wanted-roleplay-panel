<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Wanted Roleplay Staff Panel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <% if (typeof user !== 'undefined' && user) { %>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>ðŸŽ® WANTED RP</h2>
            <p class="subtitle">Staff Panel</p>
        </div>
        
        <div class="user-info">
            <img src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.discord_id}/${user.avatar}.png` : '/img/default-avatar.png' %>" alt="Avatar" class="user-avatar">
            <div class="user-details">
                <p class="user-name"><%= user.username %></p>
                <p class="user-role">Staff Member</p>
            </div>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/dashboard" class="nav-item">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="/bans" class="nav-item">
                <i class="fas fa-ban"></i>
                <span>Baneos</span>
            </a>
            <a href="/jails" class="nav-item">
                <i class="fas fa-lock"></i>
                <span>Jail</span>
            </a>
            <a href="/hackers" class="nav-item">
                <i class="fas fa-user-secret"></i>
                <span>Hackers</span>
            </a>
            <a href="/refunds" class="nav-item">
                <i class="fas fa-undo"></i>
                <span>Devoluciones</span>
            </a>
            <a href="/donations" class="nav-item">
                <i class="fas fa-donate"></i>
                <span>Donaciones</span>
            </a>
            <a href="/chat" class="nav-item">
                <i class="fas fa-comments"></i>
                <span>Chat Interno</span>
            </a>
            <a href="/activity" class="nav-item">
                <i class="fas fa-history"></i>
                <span>Actividad</span>
            </a>
        </nav>
        
        <div class="sidebar-footer">
            <a href="/auth/logout" class="btn btn-logout">
                <i class="fas fa-sign-out-alt"></i> Cerrar SesiÃ³n
            </a>
        </div>
    </div>
    <% } %>
    
    <!-- Main Content -->
    <div class="<%= typeof user !== 'undefined' && user ? 'main-content' : 'main-content-full' %>">
        <%- body %>
    </div>
    
    <script src="/js/main.js"></script>
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
</body>
</html>
